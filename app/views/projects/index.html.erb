<p id="notice"><%= notice %></p>

<div class="card">
  <%# <div class="card-header"></div> %>
  <div class="card-body">
    <h2 class="cart-title d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-sm btn-primary' %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card">
          <div class="card-body">
          <div class="mb-3">
            <span class="badge bg-<%= project.badge_color %>"><%= project.status %></span>
            <span class="text-secondary">
              <small>
                <%= project.percent_complete %>% complete
                (<%= project.total_complete %> / <%= project.total_tasks %> tasks)
              </small>
            </span>
          </div>
            <b class="card-title text-dark"><h3><%= project.name %></h3></b>
            <p class="text-secondary" ><%= project.description %></p>
          </div>
        </div>
        <br>
      <% end %>
    <% end %>
  </div>
</div>