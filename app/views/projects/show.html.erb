<%# <p id="notice"><%= notice ></p> %>
<%= link_to 'Back', projects_path, class: 'btn btn-sm btn-light mb-3' %>
<div class="card">
  <div class="card-body">
    <h2 class="cart-title d-flex justify-content-between mb-4">
      <span><%= @project.name %></span>
      <div >
        <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-sm btn-warning' %>
        <%= link_to 'Destroy', @project, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?'} %>
      </div>
    </h2>
    <div class="mb-4">
      <h6>Add Task</h6>
        <%= form_for([@task.project, @task], html: { class: 'form-inline' }) do |f| %>
          <% if @task.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

              <ul>
              <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.hidden_field :status, value: 'not-started' %>
          <div class="input-group">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Enter task name ....' %>
            <%= f.submit class: 'btn btn-sm btn-primary' %>
          </div>
        <% end %>
    </div>

    <h4>Tasks</h4>
    <% @project.tasks.each do |task| %>
      <% if task.persisted? %>
        <div class="card mb-2">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <span class="badge badge-<%= task.badge_color %> mb-3 text-<%= task.badge_color %>"><%= task.status %></span>
              <div>
                <%= link_to 'Edit', edit_project_task_path(task.project, task), class: 'btn btn-sm btn-light' %>
                <%= link_to 'Destroy', [task.project, task], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-secondary' %>
              </div>
            </div>
            <h5 class="cart-title mb-2">
              <span><%= task.name %></span>
            </h5>
            <p class="mt-4"><%= task.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>